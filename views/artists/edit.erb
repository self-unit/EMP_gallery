<form method="post" action="/artists/<%= @artist.id %>">
  <label for="first-name">First Name:</label>
  <input id="first-name" type="text" name="first_name" value="<%= @artist.first_name %>" />


  <label for="last-name">Last Name:</label>
  <input id="last-name" type="text" name="last_name" value="<%= @artist.last_name %>" />

  <label for="link">Insert picture link:</label>
  <input id="link" type="text" name="link" value="<%= @artist.link %>" />

  <label for="bio">Write a biography:</label>
  <textarea id="bio" name="bio" maxlength="1000"><%= @artist.bio %></textarea>

  <input type='submit' value="Amend artist details"/>

</form>

<form method="post" action="/artists/<%= @artist.id %>/delete">
  <input id='hidden' type='hidden' name='_method' value='delete'/>
  <input type='submit' value='Delete'/>
</form>
